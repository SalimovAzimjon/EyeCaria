<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#7B708A</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="AppTheme.ProgressStyle">
        <item name="colorAccent">@color/colorPrimaryDark</item> <!-- Whatever color you want-->
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/lightBlack</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/lightGreen</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/lightBlack</item>

        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/black</item>
    </style>

</resources>